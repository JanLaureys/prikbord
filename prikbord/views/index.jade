extends layout

block content
  .row
    .col-lg-12
      h1.page-header Welkom
    //
       /.col-lg-12
  //
     /.row
  //
     RIJ VOOR DASHBOARD
  .row
    a(href="/messages/unresolved")
      .col-lg-3.col-md-6.col-sm-6
        .panel.panel-red
          .panel-heading
            .row
              .col-xs-3
                i.fa.fa-flag-o.fa-5x
              .col-xs-9.text-right
                .huge.unresolved-count &nbsp;
                div Onafgehandelde berichten
    .col-lg-3.col-md-6.col-sm-6
      .panel.panel-primary
        .panel-heading
          .row
            .col-xs-3
              i.fa.fa-comments.fa-5x
            .col-xs-9.text-right
              .huge 26
              div Nieuwe commentaren
  .row
    .col-lg-12.page-messages
      each message, i in messages
        .panel.panel-default.message(data-message="#{message._id}")
          .panel-heading
            | Bericht van
            strong &nbsp;#{message.from.username}
            |  aan
            strong &nbsp;#{message.to.username}
            |  op #{moment(message.date).format("DD-MM-YYYY HH:mm")}
          .panel-body
            p
              | #{message.message}
          .panel-footer
            if message.resolved
              a.btn.btn-success Afgehandeld
            else
              a.btn.btn-default(data-action="resolve") Afhandelen
  //
     /.row
  //
     /#page-wrapper
  //
     /#wrapper
