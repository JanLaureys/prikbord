extends layout
block content
  .row
    .col-lg-12
      h1.page-header Gebruikers
  .row
    .col-lg-12.page-users
      .list-group
        each user, i in users
          if user.admin
            a.list-group-item(href="/admin/users/#{user._id}")
              i.fa.fa-user
              | &nbsp; #{user.username}
              span.label.label-info.pull-right Admin
          else
            a.list-group-item(href="/admin/users/#{user._id}")
              i.fa.fa-user
              | &nbsp; #{user.username}