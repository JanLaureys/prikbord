extends layout
block content
  .row
    .col-lg-12
      h1.page-header= title
  .row
    .col-lg-12
      form(method="post")
        div.form-group-lg
          label Ontvanger
          br
          div.btn-group(data-toggle="buttons")
            each user, i in users
              label.btn.btn-primary
                input(type="radio", name="to", value="#{user._id}")
                i.fa.fa-user
                | &nbsp; #{user.username}
        br
        div.row
          div.form-group-lg.col-lg-6
            label Boodschap
            textarea(name="message", placeholder="Wat wilt u zeggen ?").form-control
        br
        div.row
          div.col-lg-12
            button(type="submit").btn.btn-default Verzenden